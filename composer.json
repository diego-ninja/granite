{
    "name": "diego-ninja/granite",
    "description": "A lightweight zero-dependency PHP library for building immutable, serializable objects with validation capabilities.",
    "keywords": [
        "immutable",
        "serializable",
        "objects",
        "php",
        "dto",
        "value-object",
        "data-transfer-object",
        "data-object",
        "data-structure",
        "auto-mapping",
        "auto-mapper",
        "data-mapper"
    ],
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Ninja\\Granite\\": "src/"
        },
        "files": [
            "functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Diego Rin",
            "email": "yosoy@diego.ninja"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.3|^8.4"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pint": "^1.24",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^2",
        "phpunit/phpunit": "^11.0",
        "rector/rector": "^2.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration",
        "test:coverage": "phpunit --coverage-html coverage/html",
        "test:support": "phpunit --testsuite=Support",
        "test:exceptions": "phpunit --testsuite=Exceptions",
        "analyse": "phpstan analyse",
        "cs:check": "phpcs src tests",
        "cs:fix": "phpcbf src tests"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
